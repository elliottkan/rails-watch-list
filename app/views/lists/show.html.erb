<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/random/?cinema);">
  <div class="container">
    <h1><%= @list.name %></h1>
    <%= link_to "Add Bookmark", new_list_bookmark_path(@list), class:"btn btn-dark mt-5"%>
  </div>
</div>

<p>
  <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Add New List
  </button>
</p>
<div class="collapse" id="collapseExample">
  <div class="card card-body">
    <%=  render "lists/new", list: @list %>
  </div>
</div>



<div class="container mt-5">
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col">
        <div class="card shadow-sm">
          <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <div class="d-flex justify-content-between">
              <p><%= bookmark.comment %></p>
              <%= link_to "Delete",
              bookmark_path(bookmark), class:"btn btn-primary",
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
              %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
